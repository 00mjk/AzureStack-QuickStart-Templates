{
	"$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"consoleVMName": {
			"type": "string"
		},
		"domainName": {
			"type": "string"
		},
		"adminUserName": {
			"type": "string"
		},
		"adminPassword": {
			"type": "securestring"
		},
		"controllerServiceUserName": {
			"type": "string"
		},
		"controllerServicePassword": {
			"type": "securestring"
		},
		"assetLocation": {
			"type": "string",
			"metadata": {
				"description": "The location of resources that the script is dependent on such as linked templates and DSC modules"
			}
		},
		"primaryADIPAddress": {
			"type": "string",
			"metadata": {
				"description": "IP address of the target domain AD"
			}
		}
	},
	"variables": {
		"deployConsoleModulesURL": "[concat(parameters('assetLocation'),'/deployTestConsole.ps1.zip')]",
		"deployConsoleConfigurationFunction": "deployTestConsole.ps1\\deployTestConsole"
	},
	"resources": [
		{
			"type": "Microsoft.Compute/virtualMachines/extensions",
			"name": "[concat(parameters('consoleVMName'),'/ConfigureConsoleVM')]",
			"apiVersion": "2015-06-15",
			"dependsOn": [
			],
			"location": "[resourceGroup().location]",
			"properties": {
				"publisher": "Microsoft.Powershell",
				"type": "DSC",
				"typeHandlerVersion": "2.8",
				"autoUpgradeMinorVersion": "true",
				"settings": {
					"ModulesUrl": "[variables('deployConsoleModulesURL')]",
					"ConfigurationFunction": "[variables('deployConsoleConfigurationFunction')]",
					"Properties": {
						"DomainName": "[parameters('domainName')]",
						"AdminCreds": {
							"UserName": "[parameters('adminUserName')]",
							"Password": "PrivateSettingsRef:AdminPassword"
						},
						"SQLServicecreds": { 
							"UserName": "[parameters('controllerServiceUserName')]",
							"Password": "PrivateSettingsRef:ControllerPassword"
						} ,
						"primaryAdIpAddress": "[parameters('primaryADIPAddress')]"
					}
				},
				"protectedSettings": {
					"Items": {
						"AdminPassword": "[parameters('adminPassword')]",
						"ControllerPassword": "[parameters('controllerServicePassword')]"
					}
				}
			}
		}
	]
}
